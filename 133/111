#include <stdio.h>
 
int main()
{
    /* 我的第一个 C 程序 */
    printf("Hello, World! \n");
 
    return 0;
}
============================================================
#include <iostream>
using namespace std;
int main()
{
    cout << "Hello, world!" << endl;
    return 0;
}

============================================================
public class HelloWorld {
    public static void main(String[] args) {
        System.out.println("Hello World");
    }
}

